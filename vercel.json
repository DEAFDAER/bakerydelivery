{
  "version": 2,
  "builds": [{
    "src": "frontend/package.json",
    "use": "@vercel/static-build",
    "config": {
      "distDir": "build",
      "workingDirectory": "frontend"
    }
  }],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://bongao-bakery-backend.onrender.com/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://bongao-bakery-backend.onrender.com"
  }
}